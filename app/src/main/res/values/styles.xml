<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:textAppearance">@style/NavigationViewTextAppearance</item>
        <item name="android:itemPadding">8dp</item>
    </style>

    <style name="NavigationViewTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>
    

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/white</item>
    </style>

</resources>